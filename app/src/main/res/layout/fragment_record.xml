<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F9F9F9"
    android:orientation="vertical"
    tools:context="com.onairm.recordtool4android.fragment.RecordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="录屏"
        android:textColor="@color/color_333333"
        android:background="@color/color_ffffff"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1f1f1" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <com.onairm.recordtool4android.view.PGridView
                android:id="@+id/rGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4" />

            
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                >



                <TextView
                    android:id="@+id/recordCompelte"
                    android:layout_width="240dp"
                    android:layout_height="58dp"
                    android:background="@drawable/record_compelete"
                    android:text="已录制完成，开始视频编辑吧"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_ffffff"
                    android:visibility="gone"
                    />


            </LinearLayout>
            




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00:00:00"
                    android:textSize="20sp"
                    android:textColor="@color/color_333333"
                    />


                <TextView
                    android:id="@+id/startText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/start_record"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    />


                <Button
                    android:id="@+id/startRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_home_record_start"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    />


            </LinearLayout>




        </LinearLayout>




    </ScrollView>





</LinearLayout>
